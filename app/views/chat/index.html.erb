<%= javascript_pack_tag 'application' %>
<%= stylesheet_pack_tag 'application' %>

<% if current_user %>
  Logged in as <%= current_user.handle %>
  <%= link_to 'Log Out', logout_path %>
<% else %>
  <%= link_to 'Sign Up', signup_path %> or
  <%= link_to 'Log In', login_path %>
<% end %>
<p id=”notice”><%= notice %></p>

<h1>Chat with a representative</h1>
<div style="width: 40%; float: left; padding: 5%">
  <h2>Client view</h2>
  <% if current_user %>
    <%= react_component("ClientChat", { userHandle: current_user.handle, userName: current_user.name, userToken: user_token, repId: session[:rep_id] }) %>
  <% else %>
    <p>
      Please log in to show client chat
    </p>
  <% end %>
</div>
<div style="width: 40%; float: right; padding: 5%">
  <h2>Representative view</h2>
  <% if session[:rep_id].blank? %>
    <p>Please configure the representative: <%= link_to 'Configure representative', setup_path %>
  <% else %>
    <%= react_component("RepresentativeChat", { repId: session[:rep_id], repToken: session[:rep_token], repName: session[:rep_name]}) %>
  <% end %>
</div>
